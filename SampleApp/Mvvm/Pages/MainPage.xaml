        <CollectionView  Grid.Row="1" Grid.Column="1" ItemsSource="{Binding SampleListData}" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Name}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


