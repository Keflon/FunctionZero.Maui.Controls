<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cz="clr-namespace:FunctionZero.Maui.Controls;assembly=FunctionZero.Maui.Controls"
             x:Class="FunctionZero.Maui.Controls.ListItemZero"
             x:Name="Self"
             StyleClass="Local"
             HorizontalOptions="FillAndExpand"
             BackgroundColor="Transparent"
             >
    <!--TODO: Set BackgroundColor from a style, so it can be 'put back' by the Setter below on iOS. Or see if next MAUI fixes the bug.-->
    <ContentView.Resources>
        <Style TargetType="cz:ListItemZero" Class="Local">
            <Style.Triggers>
                <!--<DataTrigger TargetType="cz:ListItemZero" Binding="{Binding IsSelected, Source={x:Reference Self}}" Value="True">
                    <Setter Property="Opacity" Value="Blue"/>
                </DataTrigger>-->
                <Trigger TargetType="cz:ListItemZero" Property="IsSelected" Value="True">
                    <Setter Property="BackgroundColor" Value="Cyan"/>
                </Trigger>
                <Trigger TargetType="cz:ListItemZero" Property="IsPrimary" Value="True">
                    <Setter Property="Scale" Value="1.1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </ContentView.Resources>
</ContentView>
