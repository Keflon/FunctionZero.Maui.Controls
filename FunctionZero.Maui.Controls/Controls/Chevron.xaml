<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FunctionZero.Maui.Controls.Chevron" Padding="3"
             WidthRequest="{Binding Height, Mode=OneWay, Source={x:RelativeSource Self}}"                                  
             
            >
    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
    </ContentView.GestureRecognizers>
    <Image x:Name="TheImage">
        <!--
        Set the Source in code, after we have the size we want to draw it. 
        Fixes an initial layout problem on iOS where a high initial value for Size 
        puts big gaps between CollectionView items
        -->
    </Image>
</ContentView>
