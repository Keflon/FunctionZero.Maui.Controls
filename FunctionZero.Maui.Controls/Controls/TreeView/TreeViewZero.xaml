<ContentView  
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:controls="clr-namespace:FunctionZero.Maui.Controls"
        x:Class="FunctionZero.Maui.Controls.TreeViewZero"
    x:Name="Self">
    <ContentView.Content>
        <CollectionView x:Name="TheListView" SelectionMode="Single" >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <controls:TreeNodeZero 
                        Style="{Binding ItemContainerStyle, Source={x:Reference Self}}">
                        <!--<VerticalStackLayout >
                            <Label Text="{Binding Source={x:Reference Self}}"/>
                            <Label Text="{Binding  Source={x:Reference cc}}"/>
                            <Label Text="{Binding ContentTemplateProvider,Source={x:Reference cc}}"/>-->
                        <controls:ContentControl x:Name="cc"
                            BindingContext="{Binding Data, Mode=OneWay}" 
                            ContentTemplateProvider="{Binding TreeItemTemplate, Source={x:Reference Self}, Mode=OneWay}"/>
                        <!--</VerticalStackLayout>-->
                    </controls:TreeNodeZero>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentView.Content>
</ContentView>
